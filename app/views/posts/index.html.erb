<p id="notice"><%= notice %></p>
<div class="page-header">
   <h1 style="margin-left:15px">  <small>index page</small></h1>
</div>

<div class="panel panel-danger" style="margin-left:10px">
  <!-- Default panel contents -->
  <div class="panel-heading" style="background-color:pink">Listing of Posts</div>


 <table class="table">
   <thead>
    <tr>
      <th style="color:blue">Title</th>

      <th style="color:red">Body</th>

      <th style="color:green">Tag</th>
      <th colspan="3"></th>
    </tr>
   </thead>

   <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.tag %></td>
        <td><a class="btn btn-default" href='<%=post_path(post)%>'>Show</a></td>
        <td><a class="btn btn-warning" href='<%=edit_post_path(post)%>'>Edit</a></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you  sure?' } %></td>
      </tr>
     <% end %>
   </tbody>
 </table>
</div>

<br>

<a class="btn btn-info" href='<%=new_post_path %>'>New Post</a>

