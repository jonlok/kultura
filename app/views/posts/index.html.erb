<p id="notice"><%= notice %></p>
<div class="page-header">
   <h1 style="margin-left:15px">  <small>Your email: <%=current_user.email%></small></h1>
</div>

<div class="input-group" style="margin-bottom:50px; margin-left:30px">
  <%= form_tag(posts_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Posts", class: 'form-control' %>

      <%= submit_tag "Search", class: 'btn btn-primary' %>

  <% end %>
</div>



<div class="panel panel-danger" style="margin-left:10px">
  <!-- Default panel contents -->
  <div class="panel-heading" style="background-color:pink">Listing of Posts</div>

<div class="table-responsive">
 <table class="table table-hover">
   <thead>
    <tr>
      <th style="color:blue">Title</th>

      <th style="color:red">Body</th>

      <th style="color:green">#Tag</th>

      <th style="color:green">Created at</th>

      <th style="color:green">Updated at</th>

      <th style="color:blue">Image</th>

      <!-- <th colspan="3"></th> -->
    </tr>
   </thead>

   <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.tag %></td>
        <!-- <td><%= post.timestamp %></td> -->
        <td><%= post.created_at.localtime %></td>
        <td><%= post.updated_at.localtime %></td>
        <td><img src="<%= post.image.url %>" alt= "image" style="width:400px;height:300px"></td>
        <td><a class="btn btn-default" href='<%=post_path(post)%>'>Show</a></td>
        <td><a class="btn btn-warning" href='<%=edit_post_path(post)%>'>Edit</a></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you  sure?' }, class: 'btn btn-danger'  %></td>
      </tr>
     <% end %>
   </tbody>
  </table>
 </div>
</div>

<br>

<a class="btn btn-info" href='<%=new_post_path %>' style="margin-left:10px">New Post</a>
<a class="btn btn-warning" href='<%=posts_path%>'>All Posts</a>

